{
  "entryFile": "src/index.ts",
  "noImplicitAdditionalProperties": "silently-remove-extras",
  "controllerPathGlobs": ["src/**/*Controller.ts"],
  "spec": {
    "basePath": "/api/",
    "outputDirectory": "src/api/generated/",
    "specVersion": 3
  },
  "routes": {
    "basePath": "/api/",
    "routesDir": "src/api/generated/",
    "middleware": "express",
    "esm": true
  },
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
